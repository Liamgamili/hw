class Grade:
    def __init__(self, student_name, grade, topic):
        self.student_name = student_name
        self.grade = grade
        self.topic = topic
    @staticmethod
    def grade_current_index():
        return self.grade = grade_current
    @staticmethod
    def sum_grades():
        sum = 0
        sum = sum + grade_current
        return sum
    @staticmethod
    def avg_grades():
        avg = 1
        if sum > grade_current:
            avg+=1
    def __str__(self):
        return f'customer: id : {self.student_name}, student_name : {self.grade}, grade : {self.topic}, topic)'
    def __repr__(self):
        return f'Customer: ({self.student_name}, {self.grade}, {self.topic})'
        
